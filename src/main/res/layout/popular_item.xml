<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pop_img"
            android:layout_width="289dp"
            android:layout_height="190dp"
            app:riv_corner_radius="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/offers3"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/pop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acumin_pro_bold"
            android:text="Popular Products"
            android:textSize="19sp"
            android:textColor="@color/dark_green"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/pop_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="true"
            android:fontFamily="@font/lacu_regular"
            android:text="Description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5sp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/ratingbar"
                android:layout_marginLeft="-5dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/pop_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5.0"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/acumin_pro_bold"/>

            <TextView
                android:id="@+id/pop_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/acumin_pro_bold"
                android:gravity="end"
                android:text="Discount 20% Off"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>