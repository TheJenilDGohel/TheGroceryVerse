<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:padding="5dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rec_img"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@mipmap/offers3"
            app:riv_corner_radius="5dp"
            />

        <TextView
            android:id="@+id/rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="19sp"
            android:fontFamily="@font/acumin_pro_bold"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/rec_dec"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/lacu_regular"
            android:singleLine="true"
            android:text="Description"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="-5dp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/ratingbar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rec_rating"
                android:gravity="center_vertical"
                android:text="5.0"
                android:fontFamily="@font/acumin_pro_bold"
                android:layout_weight="1"
                android:layout_marginTop="3dp"/>

            <ImageButton
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/app_logo_trans"
                android:src="@drawable/addtocart_icon"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:visibility="gone"
                />

            <ImageButton
                android:id="@+id/addToFav"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@drawable/app_logo_trans"
                android:src="@drawable/addtofav_icon"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                />



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>